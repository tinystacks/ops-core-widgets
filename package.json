{
  "name": "@tinystacks/ops-core-widgets",
  "version": "0.0.0-release",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinystacks/ops-core-widgets.git"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js; rm dist/*.jsx",
    "build:types": "tsc",
    "build:js": "babel dist --out-dir dist --extensions \".js,.jsx\" --source-maps inline",
    "clean": "rm -rf ./dist || true; rm *.tgz || true; rm -rf ./build; rm -rf node_modules; rm package-lock.json",
    "clean-build": "npm run clean; npm i; npm run build",
    "prepack": "npm run clean-build",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint-fix": "./node_modules/.bin/eslint --fix ./src",
    "lint-tests": "./node_modules/.bin/eslint --config .eslintrc.test.json ./test",
    "lint-fix-tests": "./node_modules/.bin/eslint --config .eslintrc.test.json --fix ./test",
    "prerelease": "npm version prerelease --preid=local --no-git-tag-version",
    "publish-local": "npm run prerelease; bash ./localNpmLogin.sh; npm publish --tag local --@tinystacks:registry=http://local-npm-registry:4873",
    "setup-test-lint": "node ./scripts/setup-test-lint.js",
    "test": "jest",
    "test-cov": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-react": "^7.18.6",
    "@types/jest": "^29.4.0",
    "@types/lodash.isempty": "^4.4.7",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.263.0",
    "@aws-sdk/types": "^3.257.0",
    "@chakra-ui/react": "^2.5.1",
    "@tinystacks/ops-core": "0.0.0-release",
    "@tinystacks/ops-model": "0.0.0-release",
    "aws-sdk": "^2.1307.0",
    "chakra-ui-markdown-renderer": "^4.1.0",
    "lodash.isempty": "^4.4.0",
    "react": "^18.2.0",
    "react-markdown": "^8.0.5",
    "react-remark": "^2.1.0"
  }
}
